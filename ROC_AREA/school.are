        mpoload 3731 $n 2 target
        mpexp $n 100
        mpgold $n 1000
        say 另外如果這邊冒險者太多的話，你也可以去競技場，
        say 先祈禱傳送(/)然後往下(d)開門(open d)再往下(d).
        say 如果你升到了 Lv4 或 Lv5，別忘了再回來找我喔.
        cast heal $n
        smile
        if is_qmark($n) == school_adept_quest
                mpmod_qmark $n school_adept_quest v0 | 2
        else
                mpadd_qmark $n school_adept_quest -1 2 0 0 0 1
        endif
endif
if level($n) == 4
or level($n) == 5
        if is_qmark($n) & school_adept_quest 100004
                break
        endif
        if is_qmark($n) == school_adept_quest
                mpmod_qmark $n school_adept_quest v0 | 4
        else
                mpadd_qmark $n school_adept_quest -1 4 0 0 0 1
        endif
        if is_qmark($n) & school_adept_quest 100008
                clap $n
                say 喔！ 你已經打敗考試官通過考驗了，表現真是傑出，
                if race($n) != Beholder
                        say 日後前途不可限量，這個初級護甲擁有比練習用護甲
                        say 更好的防護力，現在就送給你吧！
                else
                        say 我就再送你一個戒子作為獎勵吧！
                endif
        else
                mpechoat $n $I和藹地望著你：
                say 你做得很好，現在是該接受考驗的時候了....
                mpecho ...
                if race($n) != Beholder
                        say 穿上這個護甲往下走，並設法找到考試官，
                else
                        say 我再給你一個戒子增加攻擊力，穿上後往下走，
                        say 並設法找到考試官，然後打敗(kill)它.
                endif
                say 你若能擊敗它，那麼你在新手學校的
                say 修業便算完成了！
                say 去吧，別讓我們失望了....
        endif
        if race($n) != Beholder
                mpoload 3732 $n 3 target
                mpgold $n 500
                mpexp $n 100
        else
                mpoload 3731 $n 3 target
        endif
        wave $n
endif
