        say 好，那麼我們就開始吧。
        say 籌碼有 20 萬、 50 萬與 100 萬三種。
        mpdef_rembch $n
        mpadd_qmark self firetop_dwarf_gambling 10 0 0 0 1 0
        if is_qmark($n) == firetop_dwarf_gambling
                mpmod_qmark $n firetop_dwarf_gambling timer = 10
        else
                mpadd_qmark $n firetop_dwarf_gambling 10 0 0 0 1 0
        endif
endif
