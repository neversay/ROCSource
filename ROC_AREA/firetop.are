~
>room_defun firetop_throwup~
if is_inv_obj($n) == 5704
        echoat $n 你將 繩鉤(rope hook) 拋向高處....
        echoaround $n $n 將 繩鉤(rope hook) 拋向高處....
        if int($n) >= 22
                callout 1 rcall firetop_throw_succed $n
        else
                if int($n) >= 18
                        if rand(75)
                                callout 1 rcall firetop_throw_succed $n
                        else
                                callout 1 echo 不過失敗了。
                        endif
                else
                        if int($n) >= 14
                                if rand(50)
                                        callout 1 rcall firetop_throw_succed $n
                                else
                                        callout 1 echo 不過失敗了。
                                endif
                        else
                                if rand(25)
                                        callout 1 rcall firetop_throw_succed $n
                                else
                                        callout 1 echo 不過失敗了。
                                endif
                        endif
                endif
        endif
else
        echoat $n 你身上沒有這項東西。
endif
~
